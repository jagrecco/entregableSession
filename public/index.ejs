<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="estilos.css">
    
    <script src="/socket.io/socket.io.js"></script>
    <title>Entregable</title>
    
  </head>
  <body class="container">
    <div class="contenedor">

      <div class="usuario">
        <h4 class="btn-primary titulo_carga">Bienvenido <%=usuario%></h4>
        <a class="logout abandonar btn btn-primary" href="/logout">Abandonar la sesión</a>
      </div>

      <div class="formulario">
        
        <form onsubmit="AddProducto(this)"></form>
          <h2 class="btn-primary titulo_carga">Formulario de carga</h2>
          <div class="form-group">
              <label for="titulo">Titulo</label>
              <input type="text" class="form-control" id="titulo" name="title" placeholder="Ingrese nombre del producto">
          </div>
          <div class="form-group">
              <label for="precio">Precio</label>
              <input type="text" class="form-control" id="precio" name="price" placeholder="Ingrese el precio">
          </div>
          <div class="form-group">
              <label for="img">Img</label>
              <input type="text" class="form-control" id="img" name="thumbnail" placeholder="URL Imágen">
          </div>
          <button id="productos" type="submit" class="btn btn-primary">Enviar</button>
        </form>
        
      </div>
      
      <span id="lista"></span>
      <%- include('tabla.ejs'); %>

      <br>
      <br>
      
      <div class="centroMensajes">
        <h2 class="btn-primary titulo_carga">Centro de Mensajes</h2>
        <label for="inputMail">Ingrese su mail</label>
        <input type="email" id="inputMail" value="<%=usuario%>"/><br>
        
        <div id="msg"></div>
        
        <label for="inputChat">Mensaje</label>
        <input type="text" id="inputChat" placeholder="Ingrese aquí su mensaje" />
        <button class="btn btn-primary" id="enviarChat">Enviar</button>
      </div>
      
    </div>
    <script src="/index.js"></script>
  </body>
