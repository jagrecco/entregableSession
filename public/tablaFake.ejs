<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="estilos.css">
    
    <script src="/socket.io/socket.io.js"></script>
    <title>Entregable</title>
    
  </head>

  <body class="container" style="margin-top:50px">
    <h2 class="btn-primary titulo_carga">Titulo api/productos-test</h2>
      <table class="table" style="margin-top: 50px;">
          <thead>
              <tr>
                  <th scope="col">Producto</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Img</th>
              </tr>
          </thead>
          <tbody id="cuerpoTabla">
              <% if (prodsFake.length === 0) { %>
                  <tr>
                      <td colspan="3">No hay datos</td>
                  </tr>
              <% }else{ %>
              
              <% for (let i = 0; i < prodsFake.length; i++) { %>
                  <% if (i%2) { %>
                      <tr class="table-primary">
                          <td><%=prodsFake[i].nombre%></td>
                          <td><%=prodsFake[i].precio%></td>
                          <td class="imagen"><img src=<%=prodsFake[i].foto%>></img></td>
                      </tr>
                  <%} else { %>
                  
                      <tr class="table-secondary">
                          <td><%=prodsFake[i].nombre%></td>
                          <td><%=prodsFake[i].precio%></td>
                          <td class="imagen"><img src=<%=prodsFake[i].foto%>></img></td>
                      </tr>
                  <% } %>
                  
              <% } } %>
          </tbody>
      </table>

  </body>
